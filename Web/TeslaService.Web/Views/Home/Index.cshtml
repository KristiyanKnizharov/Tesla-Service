@using TeslaService.Common
@{
    this.ViewData["Title"] = "Home Page";
}

<body class="vw-100 vh-100 overflow-auto" id="hero">
    <div class="text-center">
        <table class="table table-dark">
            <tr><th>
    <h1 class="" style="font-weight: 400;">Welcome to @GlobalConstants.SystemName!</h1>
</th></tr>
        </table>
        <br /><br /><br />
        <table class="table table-dark">
            <tbody>
                <tr>
                    <th>Registered users: @Model.UsersCount</th>
                    <th>Registered vehicles: @Model.VehiclesCount</th>
                    <th>Registered batteries: @Model.BatteriesCount</th>
                </tr>
            </tbody>
        </table>
        <table class="table table-dark">
            <tbody>
                <tr>
                    <th>Registered parts: @Model.PartsCount</th>
