@using TeslaService.Data.Models.Enum
@model TeslaService.Web.ViewModels.Battery.InfoBatteryModel
@{
    this.ViewData["Title"] = "Add new Battery";
}
<body class="vw-100 vh-100 overflow-auto" id="emp">
    <div style=" padding-left: 20%; padding-right: 20%; padding-top: 10%;">
        <div style="background-color: white;">
            <form method="post" class="col-md-9 offset-md-1">
                <h2>@this.ViewData["Title"]</h2>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SoftwareVersion"></label>
                    <input asp-for="SoftwareVersion" class="form-control"  rows="2" maxlength="36"/>
                    <span asp-validation-for="SoftwareVersion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status"></label>
                    <select asp-for="Status" asp-items="@Html.GetEnumSelectList<BatteryStatus>()" class="form-control  col-md-4"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mileage"></label>
                    <input asp-for="Mileage" class="form-control" />
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HorsePower"></label>
                    <input asp-for="HorsePower" class="form-control" />
                    <span asp-validation-for="HorsePower" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="KilowattHour"></label>
                    <input asp-for="KilowattHour" class="form-control" />
                    <span asp-validation-for="KilowattHour" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Range"></label>
                    <input asp-for="Range" class="form-control" value="1" />
                    <span asp-validation-for="Range" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-primary" asp-area="" asp-controller="Battery" asp-action="Create" />
                <br />
            </form>
        </div>
    </div>
</body>