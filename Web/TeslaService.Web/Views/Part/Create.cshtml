@using TeslaService.Data.Models.Enum
@model TeslaService.Web.ViewModels.Part.CreatePartModel
@{
    this.ViewData["Title"] = "Add new part";
}
<body class="vw-100 vh-100 overflow-auto" id="emp">
    <div  style=" padding-left: 20%; padding-right: 20%; padding-top: 10%;">
        <div style="background-color: white;">
            <form method="post" class="col-md-9 offset-md-1">
                <h1>@this.ViewData["Title"]</h1>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VehicleModel"></label>
                    <select asp-for="VehicleModel" asp-items="@Html.GetEnumSelectList<VehicleModel>()" class="form-control  col-md-4"></select>
                    <span asp-validation-for="VehicleModel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity"></label>
                    <input asp-for="Quantity" class="form-control" value="1" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-primary" asp-area="" asp-controller="Part" asp-action="Create" />
                <br />
            </form>
        </div>
    </div>
</body>