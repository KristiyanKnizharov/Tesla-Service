@*@model TeslaService.Web.ViewModels.Battery.InfoBatteryModel*@
@model TeslaService.Services.Data.Dto.VehicleDto
<!-- ZooMove CSS minified -->

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">

@{
    ViewData["Title"] = "Details";
}

<body class="vw-100 vh-100 overflow-auto" id="hero">
    <div style="background-color: whitesmoke">
        <hr />
        <h1 class="display-4 text-center"> 
            @Model.VehicleModel
        </h1>


        <div class="container text-center">
            <h1 class="my-4">
                @Model.VehicleType
            </h1>
            <div class="row">
                @*<figure class="zoo-item" data-zoo-over="true" data-zoo-move="false">
                    </figure>*@
                <div class="col-md-7 mx-auto">
                    <img class="img-fluid zoo-img" src="@Model.ImageURL">
                </div>
                <div class="col-md-5 mx-auto">
                    <h3 class="my-3">Registration</h3>
                    <p>@Model.DateOfPurchase.Date.ToString("D")</p>
                    <hr />
                    <h3 class="my-3">Battery features</h3>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="false" aria-expanded="false">Dropdown</button>
                        <div class="dropdown-menu text-center">
                            <a class="dropdown-item">Health: @Model.Battery.Status</a>
                            <a class="dropdown-item">@Model.Battery.HorsePower HP</a>
                            <a class="dropdown-item">@Model.Battery.KilowattHour kW</a>
                            <a class="dropdown-item">@Model.Battery.Mileage KM</a>
                            <a class="dropdown-item">@Model.Battery.Range KM</a>
                            <a class="dropdown-item">@Model.Battery.SoftwareVersion</a>
                        </div>
                    </div>
                    <hr />
                    <h3 class="my-3">Details</h3>
                    <div>
                        <p>Transimisson: Automatic</p>
                        <p class="list-group-item">BatteryId: @Model.BatteryId</p>
                        <p class="list-group-item">InsuranceId: @Model.InsuranceId</p>
                    </div>
                    <h3 class="my-3">Description</h3>
                    <p>@Model.Description</p>
                    <br />
                </div>
            </div>
        </div>
    </div>
    @*<script>
        $('.zoo-item').ZooMove();
    </script>*@
    <script type="text/javascript">
        $(document).ready(function () {
            $('dropdown-toggle').show()
        });
    </script>
    <br /><hr />
</body>
