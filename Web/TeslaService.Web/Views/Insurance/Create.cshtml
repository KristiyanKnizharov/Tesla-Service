@model TeslaService.Web.ViewModels.Insurance.InfoInsuranceModel
@{
    this.ViewData["Title"] = "Add new Insurance";
}
<body class="vw-100 vh-100 overflow-auto" id="emp">
    <div style=" padding-left: 20%; padding-right: 20%; padding-top: 10%;">
        <div style="background-color: white;">
            <form method="post" class="col-md-9 offset-md-1">
                <h2>@this.ViewData["Title"]</h2>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="VinNumber"></label>
                    <input asp-for="VinNumber" class="form-control" />
                    <span asp-validation-for="VinNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfStart"></label>
                    <input asp-for="DateOfStart" class="form-control" />
                    <span asp-validation-for="DateOfStart" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfEnd"></label>
                    <input asp-for="DateOfEnd" class="form-control" />
                    <span asp-validation-for="DateOfEnd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <input type="submit" class="btn btn-primary" asp-area="" asp-controller="Insurance" asp-action="Create" />
                <br />
            </form>
        </div>
    </div>
</body>