@using TeslaService.Web.Controllers
@using TeslaService.Web.ViewModels.Insurance
@{
    this.ViewData["Title"] = "All insurances";
}

<body class="vw-100 vh-100 overflow-auto" id="emp">
    <table class="table" style="border: 1px solid; overflow-x:auto; background-color:white">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>VinNumber</th>
                <th>DateOfStart</th>
                <th>DateOfEnd</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
            @foreach (AllInsuranceModel insurance in Model)
            {
                <tr>
                    <td>@insurance.Id</td>
                    <td>@insurance.VinNumber</td>
                    <td>@insurance.DateOfStart</td>
                    <td>@insurance.DateOfEnd</td>
                    <td>@insurance.Description</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <div class="">
            <a asp-area="" asp-controller="Insurance" asp-action="Create" class="buttonCreate">Create</a>
        </div>
    </div>
</body>